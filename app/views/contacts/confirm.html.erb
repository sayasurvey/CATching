<% content_for(:title, 'お問い合わせ内容確認|CATching') %>

<div class='content  m-5'>
  <h1 class='title p-4'>お問い合わせ内容確認</h1>
  <div class='row'>
    <div class='col-lg-8 offset-lg-2 py-5'>
      <table>
        <tbody>
          <tr>
            <th>お名前</th>
            <td class='px-2'><%= @contact.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td class='px-2'><%= @contact.email %></td>
          </tr>
          <tr>
            <th>メッセージ</th>
            <td class='px-2 message'><%= @contact.message %></td>
          </tr>
        </tbody>
      </table>

      <%= form_for @contact do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :message %>
        <div class='float-right my-1'><%= f.submit '送信', class: 'btn-flat-border' %></div>
      <% end %>
      <%= form_for @contact, url: back_path do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :message %>
        <div class='my-1'><%= f.submit '入力画面に戻る', class: 'btn-flat-border' %></div>
      <% end %>
    </div>
  </div>
</div>