<% content_for(:title, 'お問い合わせ|CATching') %>

<div class='content  m-5'>
  <h1 class='title p-4'>お問い合わせ</h1>
  <div class='row'>
    <div class='col-lg-8 offset-lg-2 py-5'>
      <%= form_for @contact, url: confirm_path do |f| %>
        <div class='form-group'>
          <%= f.label :name,'お名前※' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :email,'メールアドレス*' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class='form-group'>
          <%= f.label :message,'メッセージ※' %>
          <%= f.text_area :message, size: '10×10', class: 'form-control' %>
        </div>
        <%= f.submit '入力内容確認', class: 'btn-flat-border' %>
      <% end %>
    </div>
  </div>
</div>